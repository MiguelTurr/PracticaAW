<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <!-- CSS -->
    <link rel="stylesheet" href="css/main.css">

    <%- include ("partials/header") %>

</head>
<body>
    <div class="container p-5" id="login">
        <div class="row">
          <div class="col-sm-4 offset-md-4">
            <div class="card">
              <div class="card-header bg-dark text-white text-center">
              <h3>Inicio de sesión</h3>
              </div>
              <div class="card-body">
                <form action="/login" method="POST">
                  <div class="form-group">
                    <input class="form-control" name="user" type="text" placeholder="Usuario" autofocus required/>
                  </div>
                  <div class="form-group">
                    <input class="form-control" name="pass" type="password" placeholder="Contraseña" required/>
                  </div>
                  <div class="form-group">
                    <button class="btn btn-primary btn-block">
                      Enviar
                    </button>
                  </div>
                </form>    
                <div class="form-group">
                  <button class="btn btn-success btn-block" onclick="ocultarLogin()">
                    Crea una cuenta aquí
                  </button>
                </div>
                <div class="form-group text-danger">
                  <%= message %>
                </div> 
              </div>
            </div>
          </div>
        </div>
    </div> 

    <div class="container p-5" style="display:none;" id="registro">
        <div class="row">
          <div class="col-sm-4 offset-md-4">
            <div class="card">
              <div class="card-header bg-success text-white text-center">
              <h3>Registro</h3>
              </div>
              <div class="card-body">
                <form action="/registro" method="POST">
                  <div class="form-group">
                    <input class="form-control" name="user" type="text" placeholder="Usuario" autofocus required/>
                  </div>
                  <div class="form-group">
                    <input class="form-control" name="pass" type="password" placeholder="Contraseña" required/>
                  </div>
                  <div class="form-group">
                    <button class="btn btn-primary btn-block">
                      Enviar
                    </button>
                  </div>
                </form>   
                <div class="form-group">
                  <button class="btn btn-dark btn-block" onclick="ocultarRegistro()">
                    Inicia sesión aquí
                  </button>
                </div> 
                <div class="form-group text-danger">
                  <%= message %>
                </div> 
              </div>
            </div>
          </div>
        </div>
    </div> 

    <script>

        function ocultarLogin() {
            document.getElementById("login").style.display = "none";
            document.getElementById("registro").style.display = "block";
        }

        function ocultarRegistro() {
            document.getElementById("registro").style.display = "none";
            document.getElementById("login").style.display = "block";
        }
    </script>
</body>
</html>