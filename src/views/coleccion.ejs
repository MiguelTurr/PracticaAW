<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- CSS -->
    <link rel="stylesheet" href="css/main.css">
    
    <%- include ("partials/header") %>

</head>
<body>
    <%- include ("partials/navegacion") %>

    <div class="container p-4">
        <div class="row">
            <div class="col-md-6 mx-auto">

                <div class="card text-center">
                    <div class="card-header">

                        <% if(colecciones == 0) { %>
                            <h1>No tienes ninguna colección comprada</h1>

                        <% } else { %>

                            <table class="table table-dark">
                                <thead>
                                    <tr>
                                        <td>Nombre colección</td>
                                        <td>Estado</td>
                                        <td>Ver</td>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for(var i=0; i < colecciones; i++) {%>
                                    <tr>
                                        <td><%= result[i].collectionName %></td>
                                        <td>
                                            <% if(result[i].cromoComprados == 0) { %>
                                                <span class="text-danger">No iniciada</span>

                                            <% } else if(result[i].cromoComprados == result[i].totalCromos){ %>
                                                <span class="text-success">Finalizada</span>

                                            <% } else { %>
                                                <span class="text-warning">En proceso</span>

                                            <% } %>
                                        </td>
                                        <td>
                                            <button class="btn-info" type="reset" onclick="verColeccion('<%=result[i].collectionID%>');">
                                                <i class="fas fa-search"></i>
                                            </button>
                                        </td>
                                    </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        <% } %>
                    </div>

                    <div class="card-body">
                        <button type="button" class="btn btn-success btn-block" onclick="location.href='/tienda'">Ir a la tienda</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>

        function verColeccion(id) {
            window.location.href = '/coleccion/ver/'+id;
        }
    </script>
</body>
<%- include ("partials/footer") %>
</html>